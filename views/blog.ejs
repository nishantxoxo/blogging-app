<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>homepage</title>
</head>
<body>
    <%- include('./partials/nav') %>
    <div class="container mt-4">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImageURL %>" width="700px" alt="">
        <pre class="mt-3"><%= blog.body %></pre>

    </div>
    <div class="container mt-3">
        <img src="<%= blog.createdBy.profileImageURL %>" width="50px" alt=""> <%= blog.createdBy.name %>

    </div>

<!-- form for comments  -->

    <div class="container mt-4">

        <h1>comments</h1>
        <% if (locals.user) { %>
            <form action="/users/signin" method="post">
            
                <div class="mb-3">
                  
                  <input type="text" class="form-control"  name="content" aria-describedby="emailHelp" placeholder="enter your comment">
                 
                </div>
                
                <button type="submit" class="btn btn-primary">post</button>
              </form>
        <% } %>
    </div>


    <%- include('./partials/scripts') %>
<body>
<html>